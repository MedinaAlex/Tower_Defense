package com.epsi.tower_defense;
public class Ennemi {
    String nom;
    int vitesse;
    int pv;
    int degat;
    int prix;
   
    
    public Ennemi (String nom, int vitesse, int pv, int degat, int prix){
        this.nom = nom;
        this.vitesse = vitesse;
        this.pv = pv;
        this.degat = degat;
        this.prix = prix;

    }
    

    /**
     * Faire perdre de la vie Ã  un ennemi et renvoie un boolean pour savoir si l'ennemi a encore de la vie
     * @param degat
     * @return True si l'ennemi doit mourir
     */
    public Boolean perdrePV(int degat){
    	this.pv -= degat;
    	return pv <= 0;
    }
    
    public boolean verifierEnVie(){
    	return pv <= 0;
    }    
}
